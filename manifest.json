{
  "manifest_version": 3,
  "name": "Alignment Inspector",
  "description": "Visually inspect element alignment on any webpage. Compare center, left, right, top, and bottom edges with live pixel measurements.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_title": "Toggle Alignment Inspector",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["scripting", "activeTab"],

  "host_permissions": ["<all_urls>"]
}
